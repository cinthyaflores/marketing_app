.column.is-one-third
  .card
    .card-content
      %h5 #{campaign.name}
      %h6 Community manager: #{campaign.manager.name}
      %p Producto: #{campaign.product}
      %p #{campaign.objective}
    .card-footer.justify-content-end.p-10px
      - if current_user.community_manager?
        = link_to 'Editar', edit_campaign_path(campaign), class: 'button'
      = link_to 'Ver', campaign_path(campaign), class: 'button is-info ml-5px'
