= form_for(@campaign) do |f|
  .columns
    .column= f.field_with_label :name, required: true
    .column= f.field_with_label :product, required: true, minlength: 5, maxlength: 30

    .column
      = f.label :image, class: "label"
      .columns
        .column
          .file
            = f.label :image, class: "file-label" do
              = f.file_field :image, class: "file-input"
              .file-cta
                %span.file-label=t(:upload_file, scope: :generic)

  .columns
    .column= f.select_with_label :company_id, Company.all.map{ |c| [c.name, c.id] }, required: true, class: 'select', wrapper_class: "is-one-third"
    .column= f.select_with_label :manager_id, User.community_managers.map{ |cm| [cm.name, cm.id] }, required: true, class: 'select'
    .column= f.select_with_label :user_id, User.clients.map{ |c| [c.name, c.id] }, required: true

  .columns
    .column= f.field_with_label :objective, required: true
    .column= f.field_with_label :campaign_type, required: true
    .column= f.field_with_label :token, required: true

  .columns
    .column= f.datetime_field_with_label :start_date, required: true
    .column= f.datetime_field_with_label :end_date, required: true

  .columns
    .column.align-right
      = f.submit 'Guardar', class: 'button is-primary mb-30px'
